@page
@model Index

<h1 class="text-md font-bold text-center mb-3">تفعيل الحساب</h1>
<partial name="_ValidationSummary"/>

<form method="post">
	<input type="hidden" asp-for="Input.ReturnUrl"/>
	<input type="hidden" asp-for="Input.Token"/>
	<input type="hidden" asp-for="Input.Id"/>

	<div>
		<label asp-for="Input.TempPassword" class="text-sm mr-0.5 w-full">كلمة المرور المؤقتة</label>
		<input type="password" class="mt-1 block px-3 py-1.5 text-sm w-full rounded-lg border shadow-sm 
    					focus:outline-none focus:ring-2 focus:ring-opacity-50 border-gray-200 
    					focus:border-teal-400 focus:ring-teal-400 focus:ring-opacity-30" asp-for="Input.TempPassword" autocomplete="off">
		<span asp-validation-for="Input.TempPassword" class="text-sm text-red-500"></span>
	</div>

	<div class="mt-3">
		<label asp-for="Input.Password" class="text-sm mr-0.5 w-full">كلمة المرور الجديدة</label>
		<input type="password" class="mt-1 block px-3 py-1.5 text-sm w-full rounded-lg border shadow-sm 
        					focus:outline-none focus:ring-2 focus:ring-opacity-50 border-gray-200 
        					focus:border-teal-400 focus:ring-teal-400 focus:ring-opacity-30" asp-for="Input.Password" autocomplete="off">
		<span asp-validation-for="Input.Password" class="text-sm text-red-500"></span>
	</div>

	<div class="mt-3">
		<label asp-for="Input.ConfirmPassword" class="text-sm mr-0.5 w-full">تأكيد كلمة المرور</label>
		<input type="password" class="mt-1 block px-3 py-1.5 text-sm w-full rounded-lg border shadow-sm 
            					focus:outline-none focus:ring-2 focus:ring-opacity-50 border-gray-200 
            					focus:border-teal-400 focus:ring-teal-400 focus:ring-opacity-30" asp-for="Input.ConfirmPassword" autocomplete="off">
		<span asp-validation-for="Input.ConfirmPassword" class="text-sm text-red-500"></span>
	</div>

	<div class="mt-3">
		<button class="whitespace-nowrap cursor-pointer rounded-md active:shadow-inner border py-1.5 w-20 text-center text-sm text-white
        					bg-teal-500 border-teal-500 hover:border-teal-600 hover:bg-teal-600 active:bg-teal-700">استمرار</button>
	</div>
</form>